<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC8F8F"
    android:orientation="vertical"
    tools:context="com.example.fariz.cariuntung.Cari_Tempat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#5F9EA0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="40dp"
            android:text="Cari Lokasi"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Penilaian :" />

                <EditText
                    android:id="@+id/ct_nama"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Jenis Lokasi      :" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spn_jenis"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/jenis_lokasi">


                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Kategori             :" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_kategori"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:entries="@array/kategori">


            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Harga                  :" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_harga"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:entries="@array/harga">


            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Luas Tanah        :" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_luastanah"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:entries="@array/luastanah">


            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Luas Bangunan  :" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_luasbangunan"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:entries="@array/luasbangunan">


            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/cari"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FFBD4A"
            android:text="SEARCH" />


    </LinearLayout>


</ScrollView>
